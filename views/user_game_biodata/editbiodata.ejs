<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partial/header.ejs') %>
    <title>EDIT USER BIODATA</title>
</head>
<body>
    <div class="main-screen">
        <h1 class="text-center mt-3">EDIT USER BIODATA</h1>
        <div class="text-center mx-auto mt-5">
        <form action="/biodata/edit/<%= data.id %>" method="POST">
            <div>
            <label for="first_name">First Name</label><br />
            <input
                type="text"
                name="first_name"
                value= <%= data.first_name %>
            /><br /><br />
            </div>
            <div>
            <label for="last_name">Last Name</label><br />
            <input
                type="text"
                name="last_name"
                value= <%= data.last_name %>
            /><br /><br />
            </div>
            <div>
            <label for="birth_date">Birth Date</label><br />
            <input 
                type="date" 
                name="birth_date" 
                value= <%= data.birth_date %>
            /><br /><br />
            </div>
            <div>
            <label for="gender">Gender</label><br />
            <label
              ><input type="radio" name="gender" value="female" <%= data.gender
              === "female" ? 'checked' : '' %> >Female</label
            >
            <label
              ><input type="radio" name="gender" value="male" <%= data.gender ===
              "male" ? 'checked' : '' %> >Male</label
            </div>
            <br /><br />
            <div>
            <input type="submit"/>
            </div>
        </form>
        </div>
    </div>
</body>
</html>