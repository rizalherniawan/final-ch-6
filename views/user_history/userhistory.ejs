<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partial/header.ejs') %>
    <!-- LINK CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <title>USER HISTORY</title>
  </head>
  <div class="main-screen">
    <nav class="navbar"></nav>
    <div class="container-fluid">
      <div class="row">
        <div class="col-2 column1">
          <h3><a class="options" href="/userlist">user</a></h3>
          <h3><a class="options" href="/biodata">biodata</a></h3>
          <h3><a class="options" href="/historicaldata">history</a></h3>
        </div>
        <div class="col-10 column2 text-center">
          <h2 class="mt-3">HISTORY</h2>
          <table class="table table- table-striped w-75 mx-auto">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">TOTAL WIN</th>
                <th scope="col">TOTAL LOSE</th>
                <th scope="col">TOTAL LOGGED IN</th>
                <th scope="col">TOTAL PLAYS</th>
              </tr>
            </thead>
            <tbody>
              <% for (let i = 0; i < data.length; i++){ %>
              <tr>
                <td><%= data[i].id %></td>
                <td><%= data[i].total_win %></td>
                <td><%= data[i].total_lose %></td>
                <td><%= data[i].total_loggedin %></td>
                <td><%= data[i].total_plays %></td>
                <td>
                  <a href='/historicaldata/edit/<%= data[i].id %>'>Edit</a> |
                  <a href='/historicaldata/delete/<%= data[i].id %>'>Delete</a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <a href="/historicaldata/add"><button type="button" class="btn btn-dark btn-lg">ADD DATA</button></a>
        </div> 
      </div>
    </div>
  </div>
</html>